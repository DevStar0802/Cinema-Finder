<h1>Top 10 Trending Movies</h1>
<div class="MovieSection">
    {{#each topMovies}}
    <div id="">
        <div>
            <h4>{{name}}</h4>
            <div>
                <a href="" id=""><img id="" src={{image_url}}></a>
            </div>
            <p id="">{{id}}</p>
        </div>
    </div>
    {{/each}}
</div>

<h1>All Movies</h1>
<div class="MovieSection">
    {{#each movies}}
    <div id="IndividualMovie">
        <div>
            <h4>{{genre}}, {{name}}, {{review}}, {{rating}}</h4>
            <div>
                <a href="" id="modaldisplay"><img id="MovieImage" src={{image_url}}></a>
            </div>
            <p id="pictureid">{{id}}</p>
        </div>
    </div>
    {{/each}}

    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <img src="" alt="" id="modalImage">
            <p id="ModalId"></p>
            <button id="saveMovie">Save Movie</button>
        </div>
    </div>
</div>

<h1>Movie Review</h1>

<form id="reviewForm" action="/review" method="POST">
    <div>
        <label for="movieName">Movie Name:</label>
        <input type="text" id="movieName" name="movieName" required>
    </div>
    <div>
        <label for="review">Review (1-10):</label>
        <input type="number" id="review" name="review" min="1" max="10" required>
    </div>
    <button type="submit">Submit Review</button>
</form>

<h1>My movies</h1>
<div>
    {{#each savedMovies}}
    <div class="row mb-2">
        <div class="col-md-8">
            <h4>{{genre}}, {{name}}, {{review}}, {{rating}}</h4>
            <img id="MovieImage" src={{image_url}}>
            <p style="display: none;">{{movie_id}}</p>
        </div>
        <button id="deleteMovie">Delete Movie</button>
    </div>
    {{/each}}
</div>
<script src="/js/filmreview.js"></script>
<script src="/js/modal.js"></script>